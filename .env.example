APP_NAME=Go.Gin.Template
APP_VERSION=dev

DB_HOST=postgres
DB_USER=postgres
DB_PASS=3858cef82967231d2c64002729ba0f48b371211fc4d0fda6da60bc2639693dbf
DB_NAME=gogintemplate
DB_PORT=5432
DB_MAX_OPEN_CONNS=25          # Maximum number of open connections to the database
DB_MAX_IDLE_CONNS=10          # Maximum number of idle connections in the pool
DB_CONN_MAX_LIFETIME_MIN=15   # Maximum lifetime of a connection in minutes (0 = unlimited)
DB_CONN_MAX_IDLE_TIME_MIN=5   # Maximum idle time for a connection in minutes (0 = unlimited)

NGINX_PORT=80
GOLANG_PORT=8888
APP_ENV=localhost
JWT_SECRET=89959e62e397bd959236561d4f07b95b250235f927b35ef531f061b48c222b01

# Security Configuration
# BCrypt hashing cost (10-14 recommended, higher = more secure but slower)
# Minimum: 10, Default: 12, Maximum: 31
BCRYPT_COST=12

# Cache Configuration
# Permission cache time-to-live in minutes (default: 5)
CACHE_TTL_MINUTES=5
# Cache cleanup interval in minutes (default: 10)
CACHE_CLEANUP_INTERVAL_MINUTES=10

# Performance Configuration
# Metrics collection interval in seconds (default: 15)
METRICS_COLLECTION_INTERVAL_SECONDS=15

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=alloy:4318

# Trace Sampling Configuration
# Strategy: always, never, ratio, parentbased
# - always: Sample all traces (development only - high overhead)
# - never: Sample no traces (testing only)
# - ratio: Sample based on OTEL_SAMPLING_RATE
# - parentbased: Respect parent span sampling decision (recommended for production)
OTEL_SAMPLING_STRATEGY=always

# Sampling Rate: 0.0 to 1.0
# - 1.0 = 100% (sample everything)
# - 0.1 = 10% (sample 1 in 10 requests)
# - 0.01 = 1% (sample 1 in 100 requests)
# Recommended: 0.1 for development, 0.01-0.05 for production
OTEL_SAMPLING_RATE=1.0

# Logging Configuration
# Comma-separated list of paths to exclude from logging (e.g., /health,/metrics,/ready)
LOG_BLACKLIST_PATHS=/health,/metrics

# Log Destination Control
# Enable/disable stdout logging (default: true)
ENABLE_STDOUT_LOGS=true
# Enable/disable OTLP logging (default: true)
ENABLE_OTLP_LOGS=true
# Async log buffer size (default: 5000)
LOG_BUFFER_SIZE=5000
# Drop logs when buffer is full instead of blocking (default: true)
LOG_DROP_ON_FULL=true

# Profiling Configuration
# Enable/disable continuous profiling with Pyroscope (true/false)
# Recommended: true for dev/staging, false for production (or true with sampling)
ENABLE_PROFILING=true

# Pyroscope server address for continuous profiling
PYROSCOPE_SERVER_ADDRESS=http://pyroscope:4040
